{
  "name": "sigma",
  "version": "1.2.1",
  "description": "A JavaScript library dedicated to graph drawing.",
  "homepage": "http://sigmajs.org",
  "bugs": "http://github.com/jacomyal/sigma.js/issues",
  "repository": {
    "type": "git",
    "url": "http://github.com/jacomyal/sigma.js.git"
  },
  "license": "MIT",
  "main": "build/sigma.require.js",
  "scripts": {
    "start": "http-server -p 8000",
    "test": "grunt travis",
    "build": "grunt build",
    "lint": "eslint .",
    "prettify_all": "prettier {src,test,plugins}/**/*.js --write",
    "prepublish": "grunt npmPrePublish",
    "ru_build": "rollup -c",
    "ru_dev": "rollup -c -w"
  },
  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "grunt": "^1.0.3",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-concat": "~0.5.0",
    "grunt-contrib-qunit": "^3.1.0",
    "grunt-grunt": "^0.2.2",
    "grunt-sed": "~0.1.1",
    "grunt-zip": "~0.15.0",
    "http-server": "~0.9.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "load-grunt-tasks": "~0.6.0",
    "prettier": "^1.16.4",
    "rollup": "^1.2.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "uglify-js": "^2.4.15"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "examples/lib/**/*.js",
    "build/**/*.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "browser": true,
      "qunit": true
    },
    "globals": {
      "sigma": "writable"
    },
    "rules": {
      "new-cap": "off",
      "no-underscore-dangle": "off",
      "no-plusplus": "off",
      "no-multi-assign": "off",
      "no-param-reassign": "off",
      "no-console": "off"
    }
  },
  "dependencies": {
    "conrad": "^0.1.0",
    "eslint-config-prettier": "^4.0.0",
    "qunit": "^2.9.1"
  }
}
