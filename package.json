{
  "name": "sigma",
  "version": "1.2.1",
  "description": "A JavaScript library dedicated to graph drawing.",
  "homepage": "http://sigmajs.org",
  "bugs": "http://github.com/jacomyal/sigma.js/issues",
  "repository": {
    "type": "git",
    "url": "http://github.com/jacomyal/sigma.js.git"
  },
  "license": "MIT",
  "main": "build/sigma.require.js",
  "scripts": {
    "start": "http-server -p 8000",
    "build:dev": "rollup -c",
    "build:prod": "env NODE_ENV=production rollup -c",
    "lint": "eslint .",
    "prettify_all": "prettier {src,test,plugins}/**/*.js --write",
    "rollup_watch": "rollup -c -w",
    "test_watch": "jest --watch",
    "develop": "run-p rollup_watch test_watch",
    "unit_test": "jest --coverage",
    "test": "run-s unit_test build:prod"
  },
  "dependencies": {
    "conrad": "^0.1.0",
    "node-env": "^0.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "babel-jest": "^24.1.0",
    "canvas": "^2.3.1",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "http-server": "~0.9.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-canvas-mock": "^2.0.0-alpha.3",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "qunit": "^2.9.1",
    "rollup": "^1.2.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/**/*.js",
    "examples/**/*.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "browser": true,
      "qunit": true,
      "jest": true
    },
    "globals": {
      "sigma": "writable"
    },
    "rules": {
      "new-cap": "off",
      "no-underscore-dangle": "off",
      "no-plusplus": "off",
      "no-multi-assign": "off",
      "no-param-reassign": "off",
      "no-console": "off",
      "no-bitwise": "off"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ]
  }
}
